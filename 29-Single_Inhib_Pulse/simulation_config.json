{
  "manifest": {
    "$BASE_DIR": "${configdir}",
    "$OUTPUT_DIR": "$BASE_DIR\\output"
  },
  "target_simulator": "NEURON",
  "run": {
    "tstart": 0.0,
    "tstop": 30.0,
    "dt": 0.01,
    "dL": 20.0,
    "spike_threshold": -15.0,
    "nsteps_block": 5000
  },
  "conditions": {
    "celsius": 34.0,
    "v_init": -66.5
  },
  "inputs": {
    "file_current_clamp": {
      "input_type": "current_clamp",
      "module": "FileIClamp",
      "node_set": "all",
      "input_file": "$BASE_DIR\\input\\amps.h5"
    },
    "extnet_spikes": {
      "input_type": "spikes",
      "module": "sonata",
      "input_file": "$BASE_DIR\\input\\Splay.h5",
      "node_set": "extnet"
    },
    "inhib_spikes": {
      "input_type": "spikes",
      "module": "sonata",
      "input_file": "$BASE_DIR\\input\\Inhib.h5",
      "node_set": "inhib"
    }
  },
  "output": {
    "log_file": "log.txt",
    "output_dir": "$OUTPUT_DIR",
    "spikes_file": "spikes.h5"
  },
  "reports": {
    "v_report": {
      "variable_name": "v",
      "cells": "all",
      "module": "membrane_report",
      "sections": "soma"
    }
  },
  "node_sets_file": "$BASE_DIR\\node_sets.json"
}